.appNotes
    &_title
        font-weight 400
        text-align center
    &_space
        max-width 600px
        width 100%
        padding 20px
        margin 0 auto
        background-color #ececec
        display flex
        flex-wrap wrap
        justify-content space-between
        textarea
            flex 0 0 100%
            max-width 100%
            background-color transparent
            border none
            resize none
            height 120px
            outline none
            margin-bottom 15px
    &_add
        width 100px
        background-color #44c767
        border 1px solid #18ab29
        text-transform uppercase
        text-shadow 0 1px 0 #2f6627
        color #fff
        font-size 14px
        padding 8px
        border-radius 50px
        outline none
        transition box-shadow .2s
        user-select none
        &:hover
            box-shadow inset -1px 1px 2px rgba(0,0,0,.3)
        &:active
            transform translate(1px, 1px)
    &_container
        max-width 800px
        width 100%
        margin 15px auto
    &_row
        display flex
        flex-wrap wrap
        margin 0 -15px
    &_i
        flex 0 0 33.333333%
        max-width 33.333333%
        padding 0 15px
    &_note
        padding 10px
        line-height 1
        font-size 16px
        background-color #ececec
        border-radius 10px
        position relative
        transition box-shadow .4s ease, transform .4s ease
        padding-right 30px
        margin 10px 0
        &:hover
            transform translate(0, -1px)
            box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
        &_text
            overflow hidden
            text-overflow ellipsis
        &_close
            line-height 1
            position absolute
            right 3px
            top 50%
            margin-top -13px
            background-color transparent
            border none
            font-size 14px
            padding 5px
            width 26px
            height @width
            user-select none
            outline none
            &:active
                transform translate(1px, 1px)
    &_color
        display flex
        align-items center
        margin 0 -8px
        &_i
            padding 0 8px
            flex 1 1 0
            max-width 100%
            input
                display none
                &:checked
                    & + label
                        &:before
                            content '\2714'
                            position absolute
                            display block
                            left 50%
                            top 50%
                            line-height 1
                            font-size 13px
                            transform translate(-50%, -50%)
                            opacity .5
            label
                cursor pointer
                display block
                width 20px
                height @width
                border-radius 50%
                position relative